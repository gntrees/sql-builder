{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist/cjs",
        "rootDir": ".",
        "declaration": true,
        "declarationDir": "./dist/cjs",
        "emitDeclarationOnly": false,
        "allowImportingTsExtensions": false,
        "verbatimModuleSyntax": false
    },
    "include": ["index.ts", "src/**/*.ts"],
    "exclude": ["tests/**", "**/*.test.ts"]
}
